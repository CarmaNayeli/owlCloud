{
  "name": "owlcloud-updater",
  "version": "1.0.0",
  "description": "OwlCloud Extension Updater - Manage and update OwlCloud browser extensions",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.owlcloud.updater",
    "productName": "OwlCloud Updater",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.0",
    "semver": "^7.5.0"
  },
  "author": "Carmabella <https://carmabella.carrd.co>"
}