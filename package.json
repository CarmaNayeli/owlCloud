{
  "name": "rollcloud",
  "version": "1.2.0",
  "description": "RollCloud: DiceCloud + Roll20 + Discord Integration",
  "scripts": {
    "build:extension": "node scripts/build-extension.js",
    "build:extension:fixed": "node scripts/build-extension-fixed.js",
    "build:signed": "node scripts/build-signed.js",
    "build:signed:chrome": "node scripts/build-signed-crx.js",
    "build:signed:firefox": "node scripts/build-signed-xpi.js",
    "build:enterprise": "node scripts/build-enterprise-installer.js",
    "build:installer": "cd installer && npm run build",
    "build:installer:win": "cd installer && npm run build:win",
    "build:installer:mac": "cd installer && npm run build:mac",
    "build:installer:linux": "cd installer && npm run build:linux",
    "build:all": "npm run build:extension && npm run build:installer",
    "build:all:fixed": "npm run build:extension:fixed && npm run build:installer",
    "build": "npm run build:extension",
    "build:production": "node scripts/build-production.js",
    "build:release": "npm run build:production && node scripts/create-release.js",
    "clean": "node -e \"const fs=require('fs'); if(fs.existsSync('dist'))fs.rmSync('dist',{recursive:true});\";",
    "install:deps": "cd installer && npm install",
    "dev:installer": "cd installer && npm run dev"
  },
  "keywords": [
    "rollcloud",
    "dicecloud",
    "roll20",
    "discord",
    "pip2",
    "browser-extension",
    "chrome-extension",
    "firefox-addon"
  ],
  "author": "Dice Cat",
  "license": "MIT",
  "devDependencies": {
    "archiver": "^7.0.1"
  },
  "dependencies": {
    "crx": "^5.0.1"
  }
}
