{
  "name": "rollcloud",
  "version": "1.1.2",
  "description": "Dice Cloud Integration for Roll20",
  "scripts": {
    "build": "node build-scripts/build.js",
    "build:chrome": "node build-scripts/build.js && echo 'Chrome build: dist/chrome/'",
    "build:firefox": "node build-scripts/build.js && echo 'Firefox build: dist/firefox/'",
    "build:experimental": "node -e \"require('child_process').execSync(process.platform==='win32'?'powershell -ExecutionPolicy Bypass -File build-scripts/build-experimental.ps1 -All':'bash build-scripts/build-experimental.sh all',{stdio:'inherit'})\"",
    "build:exp": "node -e \"require('child_process').execSync(process.platform==='win32'?'powershell -ExecutionPolicy Bypass -File build-scripts/build-experimental.ps1 -All':'bash build-scripts/build-experimental.sh all',{stdio:'inherit'})\"",
    "clean": "node -e \"const fs=require('fs'); if(fs.existsSync('dist'))fs.rmSync('dist',{recursive:true}); if(fs.existsSync('dist-experimental'))fs.rmSync('dist-experimental',{recursive:true});\""
  },
  "keywords": [
    "dicecloud",
    "roll20",
    "browser-extension",
    "chrome-extension",
    "firefox-addon"
  ],
  "author": "",
  "license": "MIT"
}
