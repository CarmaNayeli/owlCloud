{
  "manifest_version": 2,
  "name": "RollCloud: Dice Cloud Integration for Roll20",
  "version": "1.2.0",
  "description": "Import D&D characters from DiceCloud to Roll20 with enhanced authentication, interactive character sheets, and GM combat tools",
  "permissions": [
    "storage",
    "activeTab",
    "https://dicecloud.com/*",
    "https://*.dicecloud.com/*",
    "https://app.roll20.net/*",
    "https://roll20.net/*"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://dicecloud.com/*",
        "https://*.dicecloud.com/*"
      ],
      "js": [
        "src/common/browser-polyfill.js",
        "src/common/debug.js",
        "src/content/dicecloud.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://app.roll20.net/*"
      ],
      "js": [
        "src/common/browser-polyfill.js",
        "src/common/debug.js",
        "src/lib/meteor-ddp-client.js",
        "src/lib/dicecloud-sync.js",
        "src/content/roll20.js",
        "src/content/character-sheet-overlay.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "src/popup-sheet.html",
    "src/popup-sheet.js",
    "src/common/debug.js",
    "src/common/browser-polyfill.js",
    "src/common/theme-manager.js",
    "src/common/html-utils.js",
    "src/modules/color-utils.js",
    "src/modules/card-creator.js",
    "src/modules/spell-edge-cases.js",
    "src/modules/class-feature-edge-cases.js",
    "src/modules/racial-feature-edge-cases.js",
    "src/modules/combat-maneuver-edge-cases.js",
    "src/lib/meteor-ddp-client.js",
    "src/lib/dicecloud-sync.js"
  ]
}