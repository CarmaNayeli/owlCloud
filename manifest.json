{
  "manifest_version": 3,
  "name": "Dice Cloud to Roll20 Importer",
  "version": "1.0.0",
  "description": "Import your Dice Cloud characters into Roll20 with ease",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://dicecloud.com/*",
    "https://*.dicecloud.com/*",
    "https://app.roll20.net/*",
    "https://roll20.net/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://dicecloud.com/*", "https://*.dicecloud.com/*"],
      "js": ["src/content/dicecloud.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://app.roll20.net/*"],
      "js": ["src/content/roll20.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
