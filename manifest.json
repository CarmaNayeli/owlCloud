{
  "manifest_version": 3,
  "name": "RollCloud: Dice Cloud Integration for Roll20",
  "version": "1.0.0",
  "description": "Seamlessly integrate Dice Cloud with Roll20 - import characters, forward dice rolls in real-time, and enhance your tabletop experience",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://dicecloud.com/*",
    "https://*.dicecloud.com/*",
    "https://app.roll20.net/*",
    "https://roll20.net/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://dicecloud.com/*", "https://*.dicecloud.com/*"],
      "js": ["src/content/dice-fix.js", "src/content/dicecloud.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://app.roll20.net/*"],
      "js": ["src/content/roll20.js", "src/content/character-sheet-overlay.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png", 
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/popup-sheet.html", "src/popup-sheet.js"],
      "matches": ["https://app.roll20.net/*"]
    }
  ]
}
